{% extends 'base.html.twig' %}

{% block title %}Liste des articles{% endblock %}

{% block body %}
<div class="row">
    <div class="col-md-12">
        <h1 class="mb-4">ðŸ“š Liste des articles</h1>

        <div class="row">
            {% for article in articles %}
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    {% if article.image %}
                        <img src="{{ asset('uploads/' ~ article.image) }}" class="card-img-top" alt="{{ article.title }}">
                    {% endif %}
                    <div class="card-body">
                        <h5 class="card-title">{{ article.title }}</h5>
                        <p class="card-text">{{ article.content|slice(0, 150) }}...</p>
                        <p class="text-muted small">
                            Par {{ article.author.username }} - {{ article.createdAt|date('d/m/Y') }}
                        </p>
                    </div>
                    <div class="card-footer">
                        <a href="{{ path('article_show', {id: article.id}) }}" class="btn btn-primary btn-sm">Lire</a>
                        {% if app.user == article.author %}
                            <a href="{{ path('article_edit', {id: article.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                            <a href="{{ path('article_delete', {id: article.id}) }}" class="btn btn-danger btn-sm" 
                               onclick="return confirm('Confirmer la suppression ?')">Supprimer</a>
                        {% endif %}
                    </div>
                </div>
            </div>
            {% else %}
            <div class="col-12">
                <p class="alert alert-info">Aucun article pour le moment.</p>
            </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}